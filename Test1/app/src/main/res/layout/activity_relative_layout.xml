<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <View
        android:id="@+id/vA"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/blue_dark"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"></View>
    <View
        android:id="@+id/vB"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/blue_light"></View>

    <View
        android:id="@+id/vB2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/vA"
        android:layout_centerHorizontal="true"
        android:background="@color/material_dynamic_tertiary20"></View>
    <View
        android:id="@+id/vB3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/vA"
        android:layout_centerVertical="true"
        android:background="@color/material_dynamic_tertiary20"></View>

    <View
        android:id="@+id/vC"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/black"
        android:layout_centerInParent="true"></View>

</RelativeLayout>